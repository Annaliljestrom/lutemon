<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="225dp"
    android:layout_marginTop="12dp"
    android:background="@android:color/transparent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/lutemonImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtLutemonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="string/Name"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/txtLutemonColour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Colour"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtLutemonAttack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Attack"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtLutemonDefence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Defence"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtLutemonHealth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Health"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtLutemonLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Level"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtLutemonBattles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Battles"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtLutemonTrainingDays"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Training Days"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtLutemonVictories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Victories"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtLutemonDefeats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Defeats"
            android:textSize="16sp" />
    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>