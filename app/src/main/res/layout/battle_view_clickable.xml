<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="175dp"
    android:layout_marginTop="5dp"
    android:background="#72597A91"

    android:orientation="horizontal">

    <ImageView
        android:id="@+id/lutemonImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="54dp">

            <Button
                android:id="@+id/btnSelect1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/txtLutemonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="string/Name"
            android:textColor="#FEFEFE"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtLutemonColour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Colour"
            android:textColor="#FEFEFE" />

        <TextView
            android:id="@+id/txtLutemonAttack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Attack"
            android:textColor="#FEFEFE" />

        <TextView
            android:id="@+id/txtLutemonDefence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Defence"
            android:textColor="#FEFEFE" />

        <TextView
            android:id="@+id/txtLutemonHealth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Health"
            android:textColor="#FEFEFE" />

        <TextView
            android:id="@+id/txtLutemonLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Level"
            android:textColor="#FEFEFE" />

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>